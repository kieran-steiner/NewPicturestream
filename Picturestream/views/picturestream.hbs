<h2>Picturestream</h2>
<div class="pictures-container">
  {{#each pictures}}
    <div class="picture-card">
      <img src="/uploads/{{file_name}}" alt="{{title}}" />
      <h3>{{title}}</h3>
      <p>{{description}}</p>
      <small>Hochgeladen am {{time}}</small>
      <form action="/favorite/{{id}}" method="POST">
        <button type="submit">❤️ Zu Favoriten</button>
      </form>
    </div>
  {{else}}
    <p>Es wurden noch keine Bilder hochgeladen.</p>
  {{/each}}
</div>