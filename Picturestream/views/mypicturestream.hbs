<h2>My Picturestream</h2>
<div class="pictures-container">
  {{#each pictures}}
    <div class="picture-card">
      <img src="/uploads/{{file_name}}" alt="{{title}}" />
      <h3>{{title}}</h3>
      <p>{{description}}</p>
      <p><strong>Hochgeladen von:</strong> {{username}}</p>
      <small>Hochgeladen am {{time}}</small>

      <!-- Kommentarformular -->
      <form
        action="/mypicturestream/comment/{{id}}"
        method="POST"
        style="margin-top: 10px;"
      >
        <textarea
          name="comment"
          rows="2"
          placeholder="Dein Kommentar hier..."
          style="width: 100%; padding: 10px; margin-bottom: 10px; border: 1px solid #ccc; border-radius: 5px;"
        >{{comment}}</textarea>
        <button
          type="submit"
          style="background-color: #87cefa; color: white; border: none; padding: 10px; border-radius: 5px; cursor: pointer; width: 100%;"
        >
          Kommentar speichern
        </button>
      </form>

      <!-- Entfernen-Button -->
      <form action="/unfavorite/{{id}}" method="POST" style="margin-top: 10px;">
        <button
          type="submit"
          style="background-color: #87cefa; color: white; border: none; padding: 10px; border-radius: 5px; cursor: pointer; width: 100%;"
        >
          ‚ùå Favorit entfernen
        </button>
      </form>
    </div>
  {{else}}
    <p>Keine Favoritenbilder gefunden.</p>
  {{/each}}
</div>